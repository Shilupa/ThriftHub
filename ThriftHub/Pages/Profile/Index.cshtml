@page
@model ThriftHub.Pages.Profile.IndexModel
@{
    ViewData["Title"] = "Profile";
}
@using Utility;

<style>
    .btn-green {
        background-color: #28a745;
        border-color: #28a745;
    }

        .btn-green:hover {
            background-color: #218838;
            border-color: #218838;
        }
</style>

<form class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@Model.objUser.FirstName @Model.objUser.LastName</h5>
                    <p class="card-text">@Model.objUser.Email</p>

                    @if (User.IsInRole(SD.AdminRole))
                    {
                        foreach (var user in Model.applicationUserList)
                        {
                            <p>
                                <span>@user.FirstName</span>
                                <button type="submit" class="btn btn-danger btn-sm" asp-route-userId="@user.Id">Delete User</button>
                            </p>
                        }
                    }
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Edit Profile</h5>
                    <form method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="ProfileImage" class="form-label">Profile Image</label>
                            <input type="file" class="form-control" id="ProfileImage" name="ProfileImage">
                        </div>
                        <div class="mb-3">
                            <label for="FirstName" class="form-label">First Name</label>
                            <input type="text" class="form-control" id="FirstName" name="Input.FirstName" value="@Model.objUser.FirstName">
                        </div>
                        <div class="mb-3">
                            <label for="LastName" class="form-label">Last Name</label>
                            <input type="text" class="form-control" id="LastName" name="Input.LastName" value="@Model.objUser.LastName">
                        </div>
                        <div class="mb-3">
                            <label for="StreetAddress" class="form-label">Street Address</label>
                            <input type="text" class="form-control" id="StreetAddress" name="Input.StreetAddress" value="@Model.objUser.StreetAddress">
                        </div>
                        <div class="mb-3">
                            <label for="City" class="form-label">City</label>
                            <input type="text" class="form-control" id="City" name="Input.City" value="@Model.objUser.City">
                        </div>
                        <div class="mb-3">
                            <label for="PostalCode" class="form-label">Postal Code</label>
                            <input type="text" class="form-control" id="PostalCode" name="Input.PostalCode" value="@Model.objUser.PostalCode">
                        </div>
                        <div class="mb-3">
                            <label for="PhoneNumber" class="form-label">Phone Number</label>
                            <input type="text" class="form-control" id="PhoneNumber" name="Input.PhoneNumber" value="@Model.objUser.PhoneNumber">
                        </div>
                        <button type="submit" class="btn btn-green">Update Profile</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</form>
