@page
@model ThriftHub.Pages.CommonIndexModel
    <style>
        /* Global styling */
        body {
            background-color: #f8f9fa;
        }
        /* Card styling */
        .card {
            border: none;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: #fff;
            padding: 20px;
            margin: 20px;
        }
        /* Green button style */
        .btn-green {
            background-color: #28a745;
            color: white;
            border: none;
        }

            .btn-green:hover {
                background-color: #218838;
            }
    </style>
    @{
        <div class="container">
            <div class="row">
                @foreach (var obj in Model.objProductList)
                {
                    <div class="col-12 col-md-6 col-lg-3 mb-4">
                        <div class="card">
                            <a asp-page="../ProductDetails/Index" asp-route-productId="@obj.Id">
                                <img src="@obj.ImageUrl" class="card-img-top" alt="@obj.Name" />
                            </a>

                            <div class="card-body">
                                <h5 class="card-title">@obj.Name</h5>
                                <h2>@obj.Category?.Name</h2>
                                <h5 class="card-title">@obj.ApplicationUser?.FirstName</h5>

                                <!-- Add more details about the product here if needed -->
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

