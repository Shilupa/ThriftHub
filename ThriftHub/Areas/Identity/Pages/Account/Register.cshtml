@page
@model RegisterModel

@{
    ViewData["Title"] = "Create an account";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f4f4f4;
        }

        .register-container {
            max-width: 400px;
            margin: auto;
            padding: 20px;
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 8px;
            box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.1);
        }

        .register-header {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

        .register-header::after {
            content: '';
            display: block;
            width: 280px;
            margin: auto;
            border-bottom: 4px solid #2e7d32;
        }

        .register-form {
            padding: 10px;
        }

        .form-label {
            font-weight: bold;
            color: #333;
        }

        .register-btn {
            width: 100%;
            margin-top: 20px;
            background-color: #2e7d32;
            border-color: #2e7d32;
            color: #ffffff;
        }

            .register-btn:hover {
                background-color: #255d28;
                border-color: #255d28;
                color: #ffffff;
            }

        .login-link {
            margin-top: 15px;
            text-align: center;
        }

            .login-link a {
                color: #2e7d32;
            }

                .login-link a:hover {
                    color: #2e7d32;
                }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="register-header">
            <h2>@ViewData["Title"]</h2>
        </div>
        <form asp-page="Register" method="post" class="register-form">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="form-label" asp-for="Input.Email">Email</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Input.Password">Password</label>
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="Input.ConfirmPassword">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn register-btn">Register</button>
            <div class="login-link">
                <p>Already have an account? <a asp-page="Login">Log in</a></p>
            </div>
        </form>
    </div>
</body>
</html>
